<Window x:Class="TemplateApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Templates" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="0,20,0,0">
            <ComboBox Name="TemplateSelector" SelectionChanged="TemplateSelector_SelectionChanged" Width="300">
                <ComboBoxItem Content="Quotes" />
                <ComboBoxItem Content="Trivia Questions" />
            </ComboBox>
            <ContentControl Name="ContentArea" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>